<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.MyMakatiCityApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Background Colors -->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/gray</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/gray200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Text Color -->
        <item name="android:textColor">@color/white</item>

        <!-- Accent Colors for Links or Highlights -->
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar and Navigation Bar (optional) -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Application Theme that inherits from Base -->
    <style name="Theme.MyMakatiCityApp" parent="Base.Theme.MyMakatiCityApp" />
</resources>
